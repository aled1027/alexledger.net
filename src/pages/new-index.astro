  <style>
    /* The grid container and its boxes */
    .grid-container {
      display: grid;
      grid-template-columns: 96px 5fr 5fr;
      grid-template-rows: 48px 1fr 1fr 1fr 72px;
      min-height: 100vh;
    }

    .header {
      grid-column: 1 / -1;
      background: var(--color-primary-200);
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
    }

    .header__go-to-end {
      position: absolute;
      right: 0.75rem;
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .header .menu-icon {
      width: 1.25rem;
      height: 1.25rem;

      /* The bottom margin is needed to raise the up logo slightly to make it more visually appealing */
      /*   margin-bottom: .25rem; */
    }

    .side {
      grid-row: 2 / -1;
      position: relative;
    }

    .side-name {
      position: absolute;
      display: inline-block;
      transform: rotate(-0.25turn);
      top: 50%;
      left: -65px;
      font-size: 3rem;
      width: 11ch;
    }

    .name-box {
      display: flex;
      align-items: center;
      padding-left: 1rem;
    }

    .posts-box {
      padding: 2rem 0.75rem 0.75rem;
    }

    .posts-box > .heading2 {
      text-align: center;
    }

    .projects-box {
      display: grid;
      grid-template-rows: 1fr 3fr 1fr;
      padding: 1rem;
    }

    .projects-box .garden {
      grid-row: 2 / 3;
      width: 100px;
      height: 100px;
      margin-inline: auto;
    }

    .projects-box h2 {
      grid-row: -1;
    }

    .ferments-box {
      padding: 1rem;
      display: grid;
      align-items: end;
    }

    .showcase-box {
      padding: 1rem;
      display: grid;
      align-items: end;
    }

    .bottom {
      display: grid;
      place-content: center;
      grid-column: 2 / -1;
    }

    .nav-list {
      display: flex;
      gap: 5rem;

      & a {
        color: inherit;
      }

      & a:hover {
        text-decoration: underline;
      }
    }

    /* MOVE SOMEWHERE ELSE */

    .metric-groups {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      justify-content: center;
      align-items: center;
      place-content: center;

      & .metric-group {
        margin-inline: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        border: 1px solid gray;
        border-radius: 4px;
        padding: 0.25rem 0.375rem;
      }

      & .metric-group__label {
        color: gray;
      }
    }
  </style>
</Layout>
