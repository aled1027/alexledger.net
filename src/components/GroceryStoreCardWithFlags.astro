    margin: 0;
  }

  h5 {
    font-size: 1em;
    font-weight: var(--font-weight-5);
  }

  h3 a {
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }

  .left-content {
    display: flex;
    flex-direction: column;
  }

